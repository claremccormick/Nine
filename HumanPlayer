import java.util.*;
public class HumanPlayer {

	public int QuitFunction()
	{
	    Scanner scan = new Scanner(System.in);
	    char function = scan.next().charAt(0);
	    
	    if(function == 'Q' || function == 'q'){
	    	System.out.println("Are you sure that you want to quit? y/n "); //asks if user is sure that they want to quit
	    	Scanner n = new Scanner(System.in);
	    	char quit = scan.next().charAt(0); //checks if first letter typed in is quit
	    	
	    	if(quit == 'y' || quit == 'Y'){
	    		System.out.println("You have just quit the backgammon game");
		        System.exit(0);
	    	}
	    	
	    	return 0;
	    }
	    
	    else if (function != scan.nextInt()){
	        System.out.println("Error...entry doesn't compute");
	        return 0;
	    }
	    
	    return function;
	}
	
	public void MakeMove(){
		SyntaxError(); // calls syntaxError to check if move is in valid format
		PassFunction(); // calls pass fuction to see if they want to play their moves or pass
		Play play = new Play(); 
		
		play.setPlay();
		
	}
	
	public String[] SyntaxError(){
		
		String moveChecker; //variable to check the moves you wish to make
		String[] subString; 
		
		Scanner scan = new Scanner(System.in);
		System.out.println("Please enter the moves you wish to make: ");
		moveChecker = scan.nextLine();
		
		subString = moveChecker.split("\\s+"); // splits move checker at the white spaces into substrings called subString
		
		if(subString = in.useDelimiter("[1-24]-[1-6]") ){ // meant to check if the substrings follow this format
			return subString;
		}
		
		else{
			System.out.println("SYNTAX ERROR: invalid move entry. Try again");
			SyntaxError();
		}
	}
	
	public void PassFunction(){
		Scanner scan = new Scanner(System.in);
	    
		System.out.println("Do you want to play or pass?");
		String playORpass = scan.nextLine();
	    
		if(playORpass == "pass" || playORpass == "Pass"){
	    	System.out.println("Next player");
	    	MakeMove(); // calls the make move function to start again
		}
	    
		else if(playORpass == "play" || playORpass == "Play"){
	    	return;
		}
	}
}
