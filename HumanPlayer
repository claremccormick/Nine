import java.util.*;
public class HumanPlayer {

	public int QuitFunction()
	{
	    Scanner scan = new Scanner(System.in);
	    char function = scan.next().charAt(0);
	    
	    if(function == 'Q' || function == 'q'){
	    	System.out.println("Are you sure that you want to quit? y/n ");
	    	Scanner n = new Scanner(System.in);
	    	char quit = scan.next().charAt(0);
	    	
	    	if(quit == 'y' || quit == 'Y'){
	    		System.out.println("You have just quit the backgammon game");
		        System.exit(0);
	    	}
	    	
	    	return 0;
	    }
	    
	    else if (function != scan.nextInt()){
	        System.out.println("Error...entry doesn't compute");
	        return 0;
	    }
	    
	    return function;
	}
	
	public void MakeMove(){
		String moveChecker;
	}
	
	public void SyntaxError(){
		
		String moveChecker;
		String[] subString;
		
		Scanner scan = new Scanner(System.in);
		System.out.println("Please enter the moves you wish to make: ");
		moveChecker = scan.nextLine();
		
		subString = moveChecker.split("\\s+");
		
		if(subString = in.useDelimiter("[1-24]-[1-6]") ){
			MakeMove();
		}
		
		else{
			System.out.println("SYNTAX ERROR: invalid move entry. Try again");
			SyntaxError();
		}
	}
	
	public void PassFunction(){
		Scanner scan = new Scanner(System.in);
	    
		System.out.println("Do you want to play or pass?");
		String playORpass = scan.nextLine();
	    
		if(playORpass == "pass" || playORpass == "Pass"){
	    	System.out.println("Next player");
	    	PassFunction();
		}
	    
		else if(playORpass == "play" || playORpass == "Play"){
			MakeMove();
	    	return;
		}
	}
}
